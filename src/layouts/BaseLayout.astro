---
import CrisisButton from '../components/CrisisButton.astro';
import CrisisChatbot from '../components/CrisisChatbot.astro';
import LanguageToggle from '../components/LanguageToggle.astro';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>
    <title>{title}</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Merriweather:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-R0FBZYBHGZ"></script>
    <script is:inline>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-R0FBZYBHGZ');
    </script>
</head>
<body>
    <!-- Crisis Banner -->
    <div class="crisis-banner">
        <div class="container">
            <p><strong data-i18n="crisis.bannerLabel">Crisis Support:</strong> <span data-i18n="crisis.bannerText">If you or someone you know is in crisis, call or text</span> <strong>988</strong> <span data-i18n="crisis.forThe">for the National Suicide and Crisis Lifeline</span></p>
        </div>
    </div>

    <!-- Header -->
    <header>
        <nav class="navbar">
            <div class="container">
                <a href="/" class="nav-brand">
                    <h1 data-i18n="header.title">Breath of Life Ministries</h1>
                    <p class="tagline" data-i18n="header.tagline">Suicide Prevention & Mental Health Ministry</p>
                </a>
                <ul class="nav-menu">
                    <li><a href="/" data-i18n="nav.home">Home</a></li>
                    <li><a href="/about" data-i18n="nav.about">About</a></li>
                    <li class="dropdown">
                        <a href="/resources" data-i18n="nav.resources">Resources</a>
                        <ul class="dropdown-menu">
                            <li><a href="/find-prayer" data-i18n="nav.findPrayer">Find a Prayer</a></li>
                            <li><a href="/read-in-time-of-need" data-i18n="nav.scriptureGuide">Scripture Guide</a></li>
                            <li><a href="/prayer-room" data-i18n="nav.prayerRoom">Prayer Room</a></li>
                            <li><a href="/video-library" data-i18n="nav.videoLibrary">Video Library</a></li>
                        </ul>
                    </li>
                    <li><a href="/blog" data-i18n="nav.blog">Blog</a></li>
                    <li><a href="/events" data-i18n="nav.events">Events</a></li>
                    <li><a href="/volunteer" data-i18n="nav.volunteer">Volunteer</a></li>
                    <li><a href="/find-help" data-i18n="nav.findHelp">Find Help</a></li>
                    <li><a href="/#contact" data-i18n="nav.contact">Contact</a></li>
                    <li class="nav-lang-toggle">
                        <LanguageToggle />
                    </li>
                </ul>
                <div class="header-right">
                    <LanguageToggle />
                    <div class="hamburger">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <slot />

    <!-- Floating Crisis Button -->
    <CrisisButton />

    <!-- Crisis Chatbot -->
    <CrisisChatbot />

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h4 data-i18n="header.title">Breath of Life Ministries</h4>
                    <p data-i18n="footer.description">Providing hope, healing, and support through Catholic mental health ministry and suicide prevention.</p>
                    <div class="social-links">
                        <a href="https://www.facebook.com/profile.php?id=61581911290693" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Visit our Facebook page">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                            Follow us on Facebook
                        </a>
                    </div>
                </div>

                <div class="footer-section">
                    <h4 data-i18n="footer.quickLinks">Quick Links</h4>
                    <ul>
                        <li><a href="/" data-i18n="nav.home">Home</a></li>
                        <li><a href="/about" data-i18n="nav.about">About</a></li>
                        <li><a href="/resources" data-i18n="nav.resources">Resources</a></li>
                        <li style="padding-left: 1rem;"><a href="/find-prayer" data-i18n="nav.findPrayer">Find a Prayer</a></li>
                        <li style="padding-left: 1rem;"><a href="/read-in-time-of-need" data-i18n="nav.scriptureGuide">Scripture Guide</a></li>
                        <li style="padding-left: 1rem;"><a href="/prayer-room" data-i18n="nav.prayerRoom">Prayer Room</a></li>
                        <li style="padding-left: 1rem;"><a href="/video-library" data-i18n="nav.videoLibrary">Video Library</a></li>
                        <li><a href="/blog" data-i18n="nav.blog">Blog</a></li>
                        <li><a href="/events" data-i18n="nav.events">Events</a></li>
                        <li><a href="/volunteer" data-i18n="nav.volunteer">Volunteer</a></li>
                        <li><a href="/find-help" data-i18n="nav.findHelp">Find Help</a></li>
                    </ul>
                </div>

                <div class="footer-section">
                    <h4 data-i18n="footer.crisisSupport">Crisis Support</h4>
                    <p><strong>988</strong> - <span data-i18n="crisis.lifeline">National Suicide and Crisis Lifeline</span></p>
                    <p><strong>741741</strong> - <span data-i18n="crisis.textLine">Text HELLO for Crisis Text Line</span></p>
                </div>
            </div>

            <div class="footer-bottom">
                <p>&copy; 2024 <span data-i18n="footer.copyright">Breath of Life Ministries. All rights reserved.</span></p>
                <p><span data-i18n="footer.inspiredBy">Inspired by the</span> <a href="https://catholicmhm.org" target="_blank">Association of Catholic Mental Health Ministers</a></p>
            </div>
        </div>
    </footer>

    <script is:inline src="/script.js"></script>
</body>
</html>
