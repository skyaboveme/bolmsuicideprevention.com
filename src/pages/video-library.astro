<style>
    .intro-text {
        padding: 2rem 0;
    }

    .featured-video-container {
        max-width: 900px;
        margin: 2rem auto;
    }

    .video-card {
        background: white;
        border-radius: var(--radius-xl);
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .video-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-xl);
    }

    .video-card.featured {
        box-shadow: var(--shadow-xl);
    }

    .video-wrapper {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        height: 0;
        overflow: hidden;
        background: #000;
    }

    .video-wrapper iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .video-placeholder {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 aspect ratio */
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .video-placeholder.prayer {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .video-placeholder.interview {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }

    .video-placeholder.training {
        background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
    }

    .placeholder-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 4rem;
        opacity: 0.3;
    }

    .video-placeholder p {
        position: absolute;
        bottom: 1rem;
        left: 0;
        right: 0;
        text-align: center;
        color: white;
        font-weight: 600;
        font-size: 1.1rem;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .video-info {
        padding: 1.5rem;
    }

    .video-info h3 {
        font-size: 1.25rem;
        margin-bottom: 0.75rem;
        color: var(--heading-color);
    }

    .video-info p {
        color: var(--text-color);
        line-height: 1.6;
        margin-bottom: 1rem;
    }

    .video-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tag {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--primary-light);
        color: var(--primary-dark);
        border-radius: var(--radius-full);
        font-size: 0.75rem;
        font-weight: 600;
    }

    .video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .coming-soon-box {
        text-align: center;
        padding: 3rem 2rem;
        background: white;
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-lg);
    }

    .coming-soon-list {
        list-style: none;
        padding: 0;
        margin: 2rem auto;
        max-width: 500px;
        text-align: left;
    }

    .coming-soon-list li {
        padding: 0.75rem 1rem;
        margin-bottom: 0.5rem;
        background: var(--bg-gradient-1);
        border-radius: var(--radius-lg);
        font-size: 1.05rem;
    }

    .coming-soon-list li:before {
        content: "‚ñ∂ ";
        color: var(--primary-color);
        font-weight: bold;
        margin-right: 0.5rem;
    }

    .cta-box {
        text-align: center;
        padding: 2rem;
    }

    @media (max-width: 768px) {
        .video-grid {
            grid-template-columns: 1fr;
        }

        .placeholder-icon {
            font-size: 3rem;
        }

        .video-placeholder p {
            font-size: 1rem;
        }
    }
</style>
