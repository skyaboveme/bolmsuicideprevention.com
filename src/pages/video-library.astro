---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import InteractiveButton from '../components/InteractiveButton.astro';
---

<BaseLayout
    title="Video Library | Breath of Life Ministries"
    description="Educational videos, guided prayers, expert interviews, and training resources for mental health awareness and suicide prevention from a Catholic perspective."
>
    <HeroSection
        title="Video Library"
        subtitle="Educational content, guided prayers, and expert insights"
        useVideo={false}
        height="medium"
    />

    <!-- Introduction -->
