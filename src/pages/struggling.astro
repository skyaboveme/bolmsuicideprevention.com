<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
    // Breathing Exercise
    let breathingInterval = null;
    let timerInterval = null;
    let roundCount = 0;
    const circle = document.getElementById('breath-circle');
    const text = document.getElementById('breath-text');
    const timer = document.getElementById('breath-timer');
    const rounds = document.getElementById('breath-rounds');
    const startBtn = document.getElementById('start-breathing');
    const stopBtn = document.getElementById('stop-breathing');

    function startBreathing() {
        startBtn.style.display = 'none';
        stopBtn.style.display = 'inline-block';
        roundCount = 0;
        breatheCycle();
    }

    function stopBreathing() {
        clearInterval(breathingInterval);
        clearInterval(timerInterval);
        startBtn.style.display = 'inline-block';
        stopBtn.style.display = 'none';
        circle.classList.remove('inhale', 'exhale');
        text.textContent = 'Breathe In';
        timer.textContent = '4';
        rounds.textContent = '';
    }

    function breatheCycle() {
        let phase = 'inhale';
        let count = 4;

        function updatePhase() {
            if (phase === 'inhale') {
                circle.classList.remove('exhale');
                circle.classList.add('inhale');
                text.textContent = 'Breathe In';
                count = 4;
                startTimer();
                phase = 'hold1';
            } else if (phase === 'hold1') {
                text.textContent = 'Hold';
                count = 7;
                startTimer();
                phase = 'exhale';
            } else if (phase === 'exhale') {
                circle.classList.remove('inhale');
                circle.classList.add('exhale');
                text.textContent = 'Breathe Out';
                count = 8;
                startTimer();
                phase = 'inhale';
                roundCount++;
                rounds.textContent = 'Rounds completed: ' + roundCount;
            }
        }

        function startTimer() {
            timer.textContent = count;
            clearInterval(timerInterval);
            timerInterval = setInterval(function() {
                count--;
                timer.textContent = count;
                if (count <= 0) {
                    clearInterval(timerInterval);
                }
            }, 1000);
        }

        updatePhase();
        breathingInterval = setInterval(function() {
            if (phase === 'inhale') {
                setTimeout(updatePhase, 0);
            } else if (phase === 'hold1') {
                setTimeout(updatePhase, 4000);
            } else if (phase === 'exhale') {
                setTimeout(updatePhase, 7000);
            }
        }, phase === 'inhale' ? 4000 : phase === 'hold1' ? 7000 : 8000);

        // Simplified timing
        clearInterval(breathingInterval);
        function runCycle() {
            // Inhale - 4 seconds
            circle.classList.remove('exhale');
            circle.classList.add('inhale');
            text.textContent = 'Breathe In';
            countdown(4);

            setTimeout(function() {
                // Hold - 4 seconds
                text.textContent = 'Hold';
                countdown(4);
            }, 4000);

            setTimeout(function() {
                // Exhale - 4 seconds
                circle.classList.remove('inhale');
                circle.classList.add('exhale');
                text.textContent = 'Breathe Out';
                countdown(4);
                roundCount++;
                rounds.textContent = 'Rounds completed: ' + roundCount;
            }, 8000);
        }

        function countdown(seconds) {
            let count = seconds;
            timer.textContent = count;
            clearInterval(timerInterval);
            timerInterval = setInterval(function() {
                count--;
                if (count >= 0) {
                    timer.textContent = count;
                }
            }, 1000);
        }

        runCycle();
        breathingInterval = setInterval(runCycle, 12000);
    }

    startBtn.addEventListener('click', startBreathing);
    stopBtn.addEventListener('click', stopBreathing);

    // Grounding Exercise - New single-card design
    let currentStep = 5;
    const groundingData = {
        5: { number: '5', sense: 'things you can SEE', instruction: 'Look around. Name 5 things you can see right now.' },
        4: { number: '4', sense: 'things you can TOUCH', instruction: 'Feel 4 things. The chair, your clothes, the ground beneath you.' },
        3: { number: '3', sense: 'things you can HEAR', instruction: 'Listen carefully. What 3 sounds can you hear?' },
        2: { number: '2', sense: 'things you can SMELL', instruction: 'Notice 2 scents around you, or imagine a comforting smell.' },
        1: { number: '1', sense: 'thing you can TASTE', instruction: 'Notice the taste in your mouth, or take a sip of water.' }
    };

    const groundNumber = document.getElementById('ground-number');
    const groundSense = document.getElementById('ground-sense');
    const groundInstruction = document.getElementById('ground-instruction');
    const groundCard = document.getElementById('grounding-card');
    const groundComplete = document.getElementById('ground-complete');
    const groundNav = document.querySelector('.ground-navigation');
    const nextBtn = document.getElementById('next-ground-step');
    const prevBtn = document.getElementById('prev-ground-step');
    const restartBtn = document.getElementById('restart-ground');

    function updateGroundingDisplay() {
        const data = groundingData[currentStep];
        groundNumber.textContent = data.number;
        groundSense.textContent = data.sense;
        groundInstruction.textContent = data.instruction;

        // Update progress dots
        document.querySelectorAll('.progress-step').forEach(function(dot) {
            const dotStep = parseInt(dot.dataset.dot);
            dot.classList.remove('completed-dot', 'done');
            if (dotStep === currentStep) {
                dot.classList.add('completed-dot');
            } else if (dotStep > currentStep) {
                dot.classList.add('done');
            }
        });

        // Update progress lines
        const lines = document.querySelectorAll('.progress-line');
        lines.forEach(function(line, index) {
            const afterStep = 5 - index;
            if (afterStep > currentStep) {
                line.classList.add('done');
            } else {
                line.classList.remove('done');
            }
        });

        // Show/hide prev button
        prevBtn.style.visibility = currentStep < 5 ? 'visible' : 'hidden';
    }

    function showCompletion() {
        groundCard.style.display = 'none';
        groundNav.style.display = 'none';
        groundComplete.style.display = 'block';

        // Mark all progress as done
        document.querySelectorAll('.progress-step').forEach(function(dot) {
            dot.classList.remove('completed-dot');
            dot.classList.add('done');
        });
        document.querySelectorAll('.progress-line').forEach(function(line) {
            line.classList.add('done');
        });
    }

    function resetGrounding() {
        currentStep = 5;
        groundCard.style.display = 'block';
        groundNav.style.display = 'flex';
        groundComplete.style.display = 'none';
        updateGroundingDisplay();
    }

    nextBtn.addEventListener('click', function() {
        if (currentStep > 1) {
            currentStep--;
            updateGroundingDisplay();
        } else {
            showCompletion();
        }
    });

    prevBtn.addEventListener('click', function() {
        if (currentStep < 5) {
            currentStep++;
            updateGroundingDisplay();
        }
    });

    restartBtn.addEventListener('click', resetGrounding);
});
</script>
