---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
    title="I'm Struggling Right Now | Breath of Life Ministries"
    description="If you're struggling right now, you're not alone. Take a breath. Find calm. Get support."
>
    <!-- Calming Full-Screen Hero -->
    <section class="calming-hero">
        <div class="hero-content">
            <p class="gentle-greeting" data-i18n="struggling.greeting">You found this page.</p>
            <h1 data-i18n="struggling.title">You Are Not Alone</h1>
            <p class="hero-message" data-i18n="struggling.message">Whatever you're feeling right now is real, but it will not last forever. You matter more than you know.</p>
        </div>
        <div class="scroll-indicator">
            <span data-i18n="struggling.scrollDown">Scroll down when you're ready</span>
            <div class="scroll-arrow"></div>
        </div>
    </section>

    <!-- Breathing Exercise -->
    <section class="breathing-section">
        <div class="container">
            <h2 data-i18n="struggling.breatheTitle">Let's Breathe Together</h2>
            <p class="breathe-intro" data-i18n="struggling.breatheIntro">Focus on this circle. Follow its rhythm. Just breathe.</p>

            <div class="breathing-container">
                <div class="breath-circle" id="breath-circle">
                    <span class="breath-text" id="breath-text">Breathe In</span>
                </div>
                <div class="breath-timer" id="breath-timer">4</div>
            </div>

            <div class="breathing-controls">
                <button id="start-breathing" class="btn btn-calm" data-i18n="struggling.startBreathing">Start Breathing Exercise</button>
                <button id="stop-breathing" class="btn btn-outline" style="display: none;" data-i18n="struggling.stopBreathing">Stop</button>
            </div>

            <p class="breath-rounds" id="breath-rounds"></p>
        </div>
    </section>

    <!-- Grounding Exercise -->
    <section class="grounding-section">
        <div class="container">
            <h2 data-i18n="struggling.groundTitle">Ground Yourself</h2>
            <p class="ground-intro" data-i18n="struggling.groundIntro">This exercise helps bring you back to the present moment.</p>

            <div class="grounding-exercise">
                <div class="ground-step active" data-step="5">
                    <div class="ground-number">5</div>
                    <div class="ground-content">
                        <h3 data-i18n="struggling.ground5Title">things you can SEE</h3>
                        <p data-i18n="struggling.ground5Text">Look around. Name 5 things you can see right now.</p>
                    </div>
                </div>
                <div class="ground-step" data-step="4">
                    <div class="ground-number">4</div>
                    <div class="ground-content">
                        <h3 data-i18n="struggling.ground4Title">things you can TOUCH</h3>
                        <p data-i18n="struggling.ground4Text">Feel 4 things. The chair, your clothes, the ground beneath you.</p>
                    </div>
                </div>
                <div class="ground-step" data-step="3">
                    <div class="ground-number">3</div>
                    <div class="ground-content">
                        <h3 data-i18n="struggling.ground3Title">things you can HEAR</h3>
                        <p data-i18n="struggling.ground3Text">Listen carefully. What 3 sounds can you hear?</p>
                    </div>
                </div>
                <div class="ground-step" data-step="2">
                    <div class="ground-number">2</div>
                    <div class="ground-content">
                        <h3 data-i18n="struggling.ground2Title">things you can SMELL</h3>
                        <p data-i18n="struggling.ground2Text">Notice 2 scents around you, or imagine a comforting smell.</p>
                    </div>
                </div>
                <div class="ground-step" data-step="1">
                    <div class="ground-number">1</div>
                    <div class="ground-content">
                        <h3 data-i18n="struggling.ground1Title">thing you can TASTE</h3>
                        <p data-i18n="struggling.ground1Text">Notice the taste in your mouth, or take a sip of water.</p>
                    </div>
                </div>
            </div>

            <button id="next-ground-step" class="btn btn-calm" data-i18n="struggling.nextStep">Next Step</button>
        </div>
    </section>

    <!-- Simple Prayer -->
    <section class="prayer-section">
        <div class="container">
            <div class="simple-prayer">
                <div class="prayer-icon">üôè</div>
                <h2 data-i18n="struggling.prayerTitle">A Simple Prayer</h2>
                <p class="prayer-intro" data-i18n="struggling.prayerIntro">You don't need many words. Just these:</p>
                <div class="prayer-text">
                    <p data-i18n="struggling.prayerLine1">Lord, I am struggling.</p>
                    <p data-i18n="struggling.prayerLine2">I don't have the words.</p>
                    <p data-i18n="struggling.prayerLine3">Please be with me.</p>
                    <p data-i18n="struggling.prayerLine4">Amen.</p>
                </div>
                <p class="prayer-reminder" data-i18n="struggling.prayerReminder">God hears even the prayers we cannot speak.</p>
            </div>
        </div>
    </section>

    <!-- Truth Reminders -->
    <section class="truth-section">
        <div class="container">
            <h2 data-i18n="struggling.truthTitle">Remember These Truths</h2>
            <div class="truth-cards">
                <div class="truth-card">
                    <p data-i18n="struggling.truth1">This feeling is temporary.</p>
                </div>
                <div class="truth-card">
                    <p data-i18n="struggling.truth2">You have survived hard days before.</p>
                </div>
                <div class="truth-card">
                    <p data-i18n="struggling.truth3">You are worthy of help and support.</p>
                </div>
                <div class="truth-card">
                    <p data-i18n="struggling.truth4">Someone out there cares about you.</p>
                </div>
                <div class="truth-card">
                    <p data-i18n="struggling.truth5">Tomorrow can be different.</p>
                </div>
                <div class="truth-card scripture">
                    <p data-i18n="struggling.truth6">"The Lord is close to the brokenhearted and saves those who are crushed in spirit."</p>
                    <cite data-i18n="struggling.truth6Cite">‚Äî Psalm 34:18</cite>
                </div>
            </div>
        </div>
    </section>

    <!-- Get Help Section -->
    <section class="help-section">
        <div class="container">
            <h2 data-i18n="struggling.helpTitle">You Don't Have to Face This Alone</h2>
            <p class="help-intro" data-i18n="struggling.helpIntro">Reaching out is strength, not weakness. These people want to help:</p>

            <div class="help-options">
                <a href="tel:988" class="help-card primary">
                    <div class="help-number">988</div>
                    <div class="help-info">
                        <h3 data-i18n="crisis.lifeline">National Suicide and Crisis Lifeline</h3>
                        <p data-i18n="struggling.call988">Call or text - Free, confidential, 24/7</p>
                    </div>
                </a>

                <a href="sms:741741?body=HELLO" class="help-card">
                    <div class="help-number">741741</div>
                    <div class="help-info">
                        <h3 data-i18n="home.crisisTextLine">Crisis Text Line</h3>
                        <p data-i18n="struggling.text741741">Text HELLO - If talking feels too hard</p>
                    </div>
                </a>

                <a href="https://988lifeline.org/chat/" target="_blank" rel="noopener" class="help-card">
                    <div class="help-icon">üí¨</div>
                    <div class="help-info">
                        <h3 data-i18n="struggling.chatOnline">Chat Online</h3>
                        <p data-i18n="struggling.chatDesc">988lifeline.org/chat - No phone needed</p>
                    </div>
                </a>
            </div>

            <div class="emergency-note">
                <p data-i18n="struggling.emergencyNote">If you're in immediate danger, call <strong>911</strong> or go to your nearest emergency room.</p>
            </div>
        </div>
    </section>

    <!-- More Resources -->
    <section class="more-section">
        <div class="container">
            <h2 data-i18n="struggling.moreTitle">When You're Ready</h2>
            <div class="more-links">
                <a href="/safety-plan" class="more-card">
                    <span class="more-icon">üõ°Ô∏è</span>
                    <h3 data-i18n="struggling.linkSafetyPlan">Create a Safety Plan</h3>
                    <p data-i18n="struggling.linkSafetyPlanDesc">A personal plan for difficult moments</p>
                </a>
                <a href="/find-prayer" class="more-card">
                    <span class="more-icon">üìñ</span>
                    <h3 data-i18n="struggling.linkPrayer">Find a Prayer</h3>
                    <p data-i18n="struggling.linkPrayerDesc">Prayers for peace and healing</p>
                </a>
                <a href="/novenas" class="more-card">
                    <span class="more-icon">üôè</span>
                    <h3 data-i18n="struggling.linkNovenas">Novenas for Healing</h3>
                    <p data-i18n="struggling.linkNovenasDesc">Nine days of powerful prayer</p>
                </a>
                <a href="/find-help" class="more-card">
                    <span class="more-icon">ü§ù</span>
                    <h3 data-i18n="struggling.linkHelp">Find More Help</h3>
                    <p data-i18n="struggling.linkHelpDesc">Resources and support options</p>
                </a>
            </div>
        </div>
    </section>

    <!-- Final Message -->
    <section class="final-section">
        <div class="container">
            <div class="final-message">
                <p data-i18n="struggling.finalMessage">You reached the end of this page. That took courage. Keep going‚Äîone breath, one moment at a time.</p>
                <div class="heart">üíô</div>
            </div>
        </div>
    </section>
</BaseLayout>

<style>
    /* Calming color palette */
    :root {
        --calm-blue: #4a90a4;
        --calm-blue-light: #e8f4f8;
        --calm-blue-dark: #2c5f6e;
        --warm-cream: #faf8f5;
    }

    /* Hero Section */
    .calming-hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        background: linear-gradient(135deg, var(--calm-blue-light) 0%, var(--warm-cream) 100%);
        padding: 2rem;
        position: relative;
    }

    .hero-content {
        max-width: 600px;
    }

    .gentle-greeting {
        font-size: 1.1rem;
        color: var(--calm-blue);
        margin-bottom: 1rem;
        opacity: 0;
        animation: fadeIn 2s ease forwards;
    }

    .calming-hero h1 {
        font-size: 3rem;
        color: var(--calm-blue-dark);
        margin-bottom: 1.5rem;
        opacity: 0;
        animation: fadeIn 2s ease 0.5s forwards;
    }

    .hero-message {
        font-size: 1.3rem;
        color: var(--text-dark);
        line-height: 1.8;
        opacity: 0;
        animation: fadeIn 2s ease 1s forwards;
    }

    @keyframes fadeIn {
        to { opacity: 1; }
    }

    .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        text-align: center;
        opacity: 0;
        animation: fadeIn 2s ease 2s forwards, bounce 2s ease-in-out 3s infinite;
    }

    .scroll-indicator span {
        display: block;
        font-size: 0.9rem;
        color: var(--calm-blue);
        margin-bottom: 0.5rem;
    }

    .scroll-arrow {
        width: 30px;
        height: 30px;
        border-right: 3px solid var(--calm-blue);
        border-bottom: 3px solid var(--calm-blue);
        transform: rotate(45deg);
        margin: 0 auto;
    }

    @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(10px); }
    }

    /* Breathing Section */
    .breathing-section {
        padding: 5rem 0;
        background: var(--warm-cream);
        text-align: center;
    }

    .breathing-section h2 {
        color: var(--calm-blue-dark);
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .breathe-intro {
        color: var(--text-light);
        margin-bottom: 3rem;
    }

    .breathing-container {
        position: relative;
        width: 250px;
        height: 250px;
        margin: 0 auto 2rem;
    }

    .breath-circle {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: linear-gradient(135deg, var(--calm-blue) 0%, var(--calm-blue-dark) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 4s ease-in-out;
        box-shadow: 0 10px 40px rgba(74, 144, 164, 0.3);
    }

    .breath-circle.inhale {
        transform: scale(1.3);
    }

    .breath-circle.exhale {
        transform: scale(1);
    }

    .breath-text {
        color: white;
        font-size: 1.3rem;
        font-weight: 600;
    }

    .breath-timer {
        position: absolute;
        bottom: -50px;
        left: 50%;
        transform: translateX(-50%);
        font-size: 2rem;
        color: var(--calm-blue);
        font-weight: 700;
    }

    .breathing-controls {
        margin-top: 3rem;
    }

    .btn-calm {
        background: var(--calm-blue);
        color: white;
        padding: 1rem 2.5rem;
        border: none;
        border-radius: 30px;
        font-size: 1.1rem;
        cursor: pointer;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-calm:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(74, 144, 164, 0.3);
    }

    .btn-outline {
        background: transparent;
        border: 2px solid var(--calm-blue);
        color: var(--calm-blue);
        padding: 1rem 2.5rem;
        border-radius: 30px;
        font-size: 1.1rem;
        cursor: pointer;
        margin-left: 1rem;
    }

    .breath-rounds {
        margin-top: 1rem;
        color: var(--text-light);
    }

    /* Grounding Section */
    .grounding-section {
        padding: 5rem 0;
        background: white;
        text-align: center;
    }

    .grounding-section h2 {
        color: var(--calm-blue-dark);
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .ground-intro {
        color: var(--text-light);
        margin-bottom: 3rem;
    }

    .grounding-exercise {
        max-width: 500px;
        margin: 0 auto 2rem;
    }

    .ground-step {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.5rem;
        background: var(--bg-light);
        border-radius: 16px;
        margin-bottom: 1rem;
        opacity: 0.4;
        transform: scale(0.95);
        transition: all 0.5s ease;
    }

    .ground-step.active {
        opacity: 1;
        transform: scale(1);
        background: var(--calm-blue-light);
        border: 2px solid var(--calm-blue);
    }

    .ground-step.completed {
        opacity: 0.6;
        background: #e8f5e9;
    }

    .ground-number {
        width: 60px;
        height: 60px;
        min-width: 60px;
        background: var(--calm-blue);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        font-weight: 700;
    }

    .ground-content {
        text-align: left;
    }

    .ground-content h3 {
        color: var(--calm-blue-dark);
        font-size: 1.2rem;
        margin-bottom: 0.25rem;
        text-transform: lowercase;
    }

    .ground-content p {
        color: var(--text-dark);
        font-size: 0.95rem;
    }

    /* Prayer Section */
    .prayer-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--calm-blue-light) 0%, white 100%);
    }

    .simple-prayer {
        max-width: 500px;
        margin: 0 auto;
        text-align: center;
        background: white;
        padding: 3rem;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    }

    .prayer-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .simple-prayer h2 {
        color: var(--calm-blue-dark);
        margin-bottom: 0.5rem;
    }

    .prayer-intro {
        color: var(--text-light);
        margin-bottom: 2rem;
    }

    .prayer-text {
        background: var(--warm-cream);
        padding: 2rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
    }

    .prayer-text p {
        font-size: 1.3rem;
        font-style: italic;
        color: var(--calm-blue-dark);
        margin-bottom: 0.75rem;
        line-height: 1.6;
    }

    .prayer-text p:last-child {
        margin-bottom: 0;
    }

    .prayer-reminder {
        color: var(--text-light);
        font-size: 0.95rem;
    }

    /* Truth Section */
    .truth-section {
        padding: 5rem 0;
        background: var(--warm-cream);
        text-align: center;
    }

    .truth-section h2 {
        color: var(--calm-blue-dark);
        font-size: 2rem;
        margin-bottom: 2rem;
    }

    .truth-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .truth-card {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
    }

    .truth-card p {
        font-size: 1.15rem;
        color: var(--text-dark);
        line-height: 1.6;
    }

    .truth-card.scripture {
        background: linear-gradient(135deg, var(--calm-blue-light) 0%, white 100%);
        grid-column: span 2;
    }

    .truth-card.scripture p {
        font-style: italic;
        color: var(--calm-blue-dark);
    }

    .truth-card cite {
        display: block;
        margin-top: 0.75rem;
        color: var(--text-light);
        font-size: 0.9rem;
    }

    /* Help Section */
    .help-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, var(--calm-blue) 0%, var(--calm-blue-dark) 100%);
        color: white;
        text-align: center;
    }

    .help-section h2 {
        color: white;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .help-intro {
        color: rgba(255, 255, 255, 0.9);
        margin-bottom: 2.5rem;
    }

    .help-options {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        max-width: 900px;
        margin: 0 auto 2rem;
    }

    .help-card {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        padding: 1.5rem;
        border-radius: 16px;
        text-decoration: none;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: transform 0.3s ease, background 0.3s ease;
    }

    .help-card:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.2);
    }

    .help-card.primary {
        background: white;
        color: var(--calm-blue-dark);
    }

    .help-card.primary .help-number {
        color: var(--calm-blue-dark);
    }

    .help-number, .help-icon {
        font-size: 2.5rem;
        font-weight: 700;
        min-width: 100px;
    }

    .help-info {
        text-align: left;
    }

    .help-info h3 {
        font-size: 1.1rem;
        margin-bottom: 0.25rem;
    }

    .help-info p {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .emergency-note {
        background: rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 10px;
        max-width: 500px;
        margin: 0 auto;
    }

    .emergency-note p {
        font-size: 0.95rem;
    }

    /* More Section */
    .more-section {
        padding: 5rem 0;
        background: white;
        text-align: center;
    }

    .more-section h2 {
        color: var(--calm-blue-dark);
        font-size: 1.8rem;
        margin-bottom: 2rem;
    }

    .more-links {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .more-card {
        background: var(--bg-light);
        padding: 2rem;
        border-radius: 16px;
        text-decoration: none;
        color: var(--text-dark);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .more-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    }

    .more-icon {
        font-size: 2.5rem;
        display: block;
        margin-bottom: 1rem;
    }

    .more-card h3 {
        color: var(--calm-blue-dark);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .more-card p {
        font-size: 0.9rem;
        color: var(--text-light);
    }

    /* Final Section */
    .final-section {
        padding: 5rem 0;
        background: var(--calm-blue-light);
        text-align: center;
    }

    .final-message {
        max-width: 600px;
        margin: 0 auto;
    }

    .final-message p {
        font-size: 1.2rem;
        color: var(--calm-blue-dark);
        line-height: 1.8;
        margin-bottom: 1.5rem;
    }

    .heart {
        font-size: 3rem;
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    /* Responsive */
    @media (max-width: 768px) {
        .calming-hero h1 {
            font-size: 2rem;
        }

        .hero-message {
            font-size: 1.1rem;
        }

        .truth-card.scripture {
            grid-column: span 1;
        }

        .help-card {
            flex-direction: column;
            text-align: center;
        }

        .help-info {
            text-align: center;
        }

        .ground-step {
            flex-direction: column;
            text-align: center;
        }

        .ground-content {
            text-align: center;
        }

        .btn-outline {
            margin-left: 0;
            margin-top: 1rem;
        }
    }
</style>

<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
    // Breathing Exercise
    let breathingInterval = null;
    let timerInterval = null;
    let roundCount = 0;
    const circle = document.getElementById('breath-circle');
    const text = document.getElementById('breath-text');
    const timer = document.getElementById('breath-timer');
    const rounds = document.getElementById('breath-rounds');
    const startBtn = document.getElementById('start-breathing');
    const stopBtn = document.getElementById('stop-breathing');

    function startBreathing() {
        startBtn.style.display = 'none';
        stopBtn.style.display = 'inline-block';
        roundCount = 0;
        breatheCycle();
    }

    function stopBreathing() {
        clearInterval(breathingInterval);
        clearInterval(timerInterval);
        startBtn.style.display = 'inline-block';
        stopBtn.style.display = 'none';
        circle.classList.remove('inhale', 'exhale');
        text.textContent = 'Breathe In';
        timer.textContent = '4';
        rounds.textContent = '';
    }

    function breatheCycle() {
        let phase = 'inhale';
        let count = 4;

        function updatePhase() {
            if (phase === 'inhale') {
                circle.classList.remove('exhale');
                circle.classList.add('inhale');
                text.textContent = 'Breathe In';
                count = 4;
                startTimer();
                phase = 'hold1';
            } else if (phase === 'hold1') {
                text.textContent = 'Hold';
                count = 7;
                startTimer();
                phase = 'exhale';
            } else if (phase === 'exhale') {
                circle.classList.remove('inhale');
                circle.classList.add('exhale');
                text.textContent = 'Breathe Out';
                count = 8;
                startTimer();
                phase = 'inhale';
                roundCount++;
                rounds.textContent = 'Rounds completed: ' + roundCount;
            }
        }

        function startTimer() {
            timer.textContent = count;
            clearInterval(timerInterval);
            timerInterval = setInterval(function() {
                count--;
                timer.textContent = count;
                if (count <= 0) {
                    clearInterval(timerInterval);
                }
            }, 1000);
        }

        updatePhase();
        breathingInterval = setInterval(function() {
            if (phase === 'inhale') {
                setTimeout(updatePhase, 0);
            } else if (phase === 'hold1') {
                setTimeout(updatePhase, 4000);
            } else if (phase === 'exhale') {
                setTimeout(updatePhase, 7000);
            }
        }, phase === 'inhale' ? 4000 : phase === 'hold1' ? 7000 : 8000);

        // Simplified timing
        clearInterval(breathingInterval);
        function runCycle() {
            // Inhale - 4 seconds
            circle.classList.remove('exhale');
            circle.classList.add('inhale');
            text.textContent = 'Breathe In';
            countdown(4);

            setTimeout(function() {
                // Hold - 4 seconds
                text.textContent = 'Hold';
                countdown(4);
            }, 4000);

            setTimeout(function() {
                // Exhale - 4 seconds
                circle.classList.remove('inhale');
                circle.classList.add('exhale');
                text.textContent = 'Breathe Out';
                countdown(4);
                roundCount++;
                rounds.textContent = 'Rounds completed: ' + roundCount;
            }, 8000);
        }

        function countdown(seconds) {
            let count = seconds;
            timer.textContent = count;
            clearInterval(timerInterval);
            timerInterval = setInterval(function() {
                count--;
                if (count >= 0) {
                    timer.textContent = count;
                }
            }, 1000);
        }

        runCycle();
        breathingInterval = setInterval(runCycle, 12000);
    }

    startBtn.addEventListener('click', startBreathing);
    stopBtn.addEventListener('click', stopBreathing);

    // Grounding Exercise
    let currentStep = 5;
    const steps = document.querySelectorAll('.ground-step');
    const nextBtn = document.getElementById('next-ground-step');

    nextBtn.addEventListener('click', function() {
        const current = document.querySelector('.ground-step[data-step="' + currentStep + '"]');
        current.classList.remove('active');
        current.classList.add('completed');

        currentStep--;

        if (currentStep > 0) {
            const next = document.querySelector('.ground-step[data-step="' + currentStep + '"]');
            next.classList.add('active');
        } else {
            nextBtn.textContent = 'Well done!';
            nextBtn.disabled = true;
            nextBtn.style.background = '#4caf50';

            // Reset after delay
            setTimeout(function() {
                currentStep = 5;
                steps.forEach(function(step) {
                    step.classList.remove('active', 'completed');
                });
                document.querySelector('.ground-step[data-step="5"]').classList.add('active');
                nextBtn.textContent = 'Next Step';
                nextBtn.disabled = false;
                nextBtn.style.background = '';
            }, 3000);
        }
    });
});
