<style>
    .intro-content {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .intro-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
    }

    .intro-content h2 {
        color: var(--primary-color);
        margin-bottom: 1.5rem;
        font-size: 2.2rem;
    }

    .intro-content p {
        font-size: 1.15rem;
        line-height: 1.8;
        color: var(--text-dark);
        margin-bottom: 1rem;
    }

    .scripture-quote {
        background: white;
        border-left: 4px solid var(--accent-color);
        padding: 1.5rem 2rem;
        margin: 2rem auto 0;
        border-radius: 0 12px 12px 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        max-width: 500px;
    }

    .scripture-quote p {
        font-style: italic;
        font-size: 1.2rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .scripture-quote cite {
        color: var(--text-light);
        font-size: 0.95rem;
    }

    /* Novena Grid */
    .novena-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .novena-card {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .novena-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .novena-image {
        height: 180px;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .novena-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .image-placeholder {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }

    .image-placeholder span {
        font-size: 4rem;
    }

    .novena-info {
        padding: 2rem;
    }

    .novena-info h3 {
        color: var(--primary-color);
        font-size: 1.4rem;
        margin-bottom: 0.25rem;
    }

    .novena-patron {
        color: var(--accent-color);
        font-weight: 600;
        font-size: 0.95rem;
        margin-bottom: 1rem;
    }

    .novena-info > p:not(.novena-patron) {
        color: var(--text-dark);
        line-height: 1.6;
        margin-bottom: 1.5rem;
    }

    .btn {
        display: inline-block;
        padding: 0.875rem 1.75rem;
        border-radius: 30px;
        font-weight: 600;
        text-decoration: none;
        cursor: pointer;
        border: none;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(30, 58, 95, 0.3);
    }

    .btn-light {
        background: white;
        color: var(--primary-color);
    }

    /* How To Grid */
    .how-to-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .how-to-card {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    .how-to-number {
        width: 50px;
        height: 50px;
        background: var(--primary-color);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 700;
        margin: 0 auto 1rem;
    }

    .how-to-card h3 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .how-to-card p {
        color: var(--text-light);
        font-size: 0.95rem;
        line-height: 1.6;
    }

    /* Reminder Box */
    .reminder-box {
        max-width: 700px;
        margin: 0 auto;
        text-align: center;
        background: linear-gradient(135deg, #e3f2fd 0%, white 100%);
        padding: 3rem;
        border-radius: 20px;
    }

    .reminder-box h2 {
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .reminder-box > p {
        color: var(--text-dark);
        margin-bottom: 2rem;
        line-height: 1.7;
    }

    .reminder-tips {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
    }

    .tip {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: white;
        padding: 0.75rem 1.25rem;
        border-radius: 30px;
        font-size: 0.95rem;
    }

    .tip-icon {
        font-size: 1.2rem;
    }

    /* Request Box */
    .request-box {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
        background: white;
        padding: 3rem;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    }

    .request-box h2 {
        color: var(--primary-color);
        margin-bottom: 1rem;
    }

    .request-box p {
        color: var(--text-dark);
        margin-bottom: 1.5rem;
    }

    /* Crisis Note */
    .crisis-note-section {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        padding: 3rem 0;
    }

    .crisis-note {
        text-align: center;
        color: white;
    }

    .crisis-note p {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    /* Modal Styles */
    .novena-modal {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.8);
        z-index: 1000;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding: 2rem 1rem;
        overflow-y: auto;
    }

    .novena-modal-content {
        background: white;
        border-radius: 20px;
        max-width: 700px;
        width: 100%;
        max-height: none;
        overflow-y: visible;
        position: relative;
        padding: 2.5rem;
        margin: auto;
    }

    .close-modal {
        position: absolute;
        top: 1rem;
        right: 1rem;
        background: var(--bg-light);
        border: none;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        font-size: 1.5rem;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-dark);
        transition: background 0.2s ease;
    }

    .close-modal:hover {
        background: var(--primary-color);
        color: white;
    }

    /* Section Titles */
    .section-title {
        text-align: center;
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .section-subtitle {
        text-align: center;
        font-size: 1.1rem;
        color: var(--text-light);
        max-width: 600px;
        margin: 0 auto;
    }

    .section-padding {
        padding: 5rem 0;
    }

    .bg-light {
        background: var(--bg-light);
    }

    @media (max-width: 768px) {
        .novena-grid {
            grid-template-columns: 1fr;
        }

        .how-to-grid {
            grid-template-columns: 1fr;
        }

        .reminder-tips {
            flex-direction: column;
            align-items: center;
        }

        .novena-modal {
            padding: 1rem 0.5rem;
        }

        .novena-modal-content {
            padding: 1.5rem;
            border-radius: 16px;
            margin: 0;
        }
    }
</style>

