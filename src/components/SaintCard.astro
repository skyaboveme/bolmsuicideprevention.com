---
interface Props {
    name: string;
    title: string;
    description: string;
    image?: string;
    feastDay?: string;
}

const { name, title, description, image, feastDay } = Astro.props;
---

<div class="saint-card">
    <div class="saint-card-inner">
        {image && (
            <div class="saint-image-container">
                <img src={image} alt={name} class="saint-image" />
                <div class="saint-image-overlay"></div>
            </div>
        )}
        <div class="saint-content">
            <h3 class="saint-name">{name}</h3>
            <p class="saint-title">{title}</p>
            {feastDay && <p class="saint-feast">Feast Day: {feastDay}</p>}
            <p class="saint-description">{description}</p>
            <div class="saint-prayer-prompt">
                <span class="prayer-icon">üôè</span>
                <span>Pray for their intercession</span>
            </div>
        </div>
    </div>
</div>

<style>
    .saint-card {
        height: 100%;
        perspective: 1000px;
    }

    .saint-card-inner {
        background: white;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .saint-card:hover .saint-card-inner {
        transform: translateY(-12px);
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
    }

    .saint-image-container {
        position: relative;
        width: 100%;
        height: 250px;
        overflow: hidden;
    }

    .saint-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .saint-card:hover .saint-image {
        transform: scale(1.1);
    }

    .saint-image-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 50%;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
        pointer-events: none;
    }

    .saint-content {
        padding: 2rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .saint-name {
        color: var(--primary-color);
        font-size: 1.75rem;
        margin-bottom: 0.5rem;
        font-weight: 700;
    }

    .saint-title {
        color: var(--accent-color);
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        font-style: italic;
    }

    .saint-feast {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        font-weight: 500;
    }

    .saint-description {
        color: var(--text-dark);
        line-height: 1.7;
        flex-grow: 1;
        margin-bottom: 1.5rem;
    }

    .saint-prayer-prompt {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        background: linear-gradient(135deg, rgba(44, 95, 141, 0.05), rgba(139, 71, 137, 0.05));
        border-radius: 12px;
        color: var(--primary-color);
        font-weight: 600;
        font-size: 0.95rem;
        border-left: 3px solid var(--accent-color);
        margin-top: auto;
    }

    .prayer-icon {
        font-size: 1.5rem;
        animation: prayerPulse 2s ease-in-out infinite;
    }

    @keyframes prayerPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
</style>
